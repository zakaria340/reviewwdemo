{% extends 'base.html.twig' %}

{% block body %}
    <h1>Urls</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ url.id }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ url.video }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ url.name }}</td>
            </tr>
            <tr>
                <th>Qualite</th>
                <td>{{ url.qualite }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_urls_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_urls_edit', { 'id': url.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
