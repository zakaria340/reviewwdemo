{# On utilise ici le layout général, qui se situe dans ce même CoreBundle maintenant #}
{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    {{movie.name}} - {{ parent() }}
{% endblock %}

{% block body %}

    <div id="body-wrapper">
        <div class="watching">
            <div id="body-wrapper">
                <div itemtype="http://data-vocabulary.org/Review-aggregate" itemscope="" data-short-url="http://fmovies.to/film/7lr6" data-cover="" data-id="7lr6" id="movie" class="container"> <ol itemtype="http://schema.org/BreadcrumbList" itemscope="" class="breadcrumb"> <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"> <a title="Watching movies online" href="" itemprop="item"><span itemprop="name">Home</span></a> </li> <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement"> <a title="Movies" href="http://fmovies.to/movies" itemprop="item"><span itemprop="name">Movies</span></a> </li> <li itemtype="http://schema.org/ListItem" itemscope="" itemprop="itemListElement" class="active"> <a title="X-Men: Apocalypse" href="http://fmovies.to/film/x-men-apocalypse.7lr6" itemprop="item"><span itemprop="name">X-Men: Apocalypse</span></a> </li> </ol> 
                    <div class="widget">   
                        <div class="mt row"> <div class="col-left col-md-14 col-xs-24"> 
                                <div class="mt" id="info">
                                    <div class="row">
                                        <div class="thumb col-md-6 hidden-sm hidden-xs"> 
                                            <img width="185" height="278" src="https://image.tmdb.org/t/p/w185{{movie.posterPath}}" class="shadow" title="X-Men - Apocalypse Poster" alt="X-Men - Apocalypse Poster" id="upload_poster" itemprop="image">

                                        </div>
                                        <div class="info col-md-18"> 
                                            <div itemtype="http://schema.org/Movie" itemscope="" itemprop="itemReviewed"> 
                                                <h1 itemprop="name" class="name">{{movie.name}}</h1> 
                                                <div class="meta">
                                                    <span> <span class="imdb">IMDb</span> <b>7.5</b> </span> 
                                                    <span> <i class="fa fa-clock-o"></i> <b> min</b> </span> 
                                                </div>  
                                                <div itemprop="description" class="desc">
                                                    <div class="shortcontent">

                                                        <p itemprop="description" id="overview">   {{movie.overview}}</p>
                                                    </div>
                                                </div> 
                                                <div class="row"> 
                                                    <dl class="meta col-sm-12"> 
                                                        <dt>Genre:</dt> 
                                                        <dd>
                                                            {% for genre in movie.genres %}
                                                                <a title="{{ genre.name }} movies" href="http://fmovies.to/genre/adventure">{{ genre.name }}</a>,
                                                            {% endfor %}
                                                        </dd>

                                                        <dt>Stars:</dt>
                                                        <dd>
                                                            {% for item in movie.credits.cast|slice(0, 5) %}

                                                                <a title="{{ item.name }} movies" href="{{ path('viewpeople', {'slug': item.name|GenerateSlug, 'id': item.id, '_format': 'html'}) }}">{{ item.name }}</a>,
                                                            {% endfor %}
                                                        </dd> 
                                                        {% if crewList.Director is defined %}
                                                            <dt>Director:</dt>
                                                            {% for item in crewList.Director %}
                                                                <a href="{{ path('viewpeople', {'slug': item.name|GenerateSlug, 'id': item.id, '_format': 'html'}) }}">
                                                                    <span itemtype="http://schema.org/Person" itemscope="" itemprop="director">
                                                                        <span itemprop="name">{{item.name}}</span>
                                                                    </span>
                                                                </a>
                                                            {% endfor %}
                                                        {% endif %}
                                                        {% if crewList.Producer is defined %}
                                                            <dt>Producer:</dt>
                                                            {% for item in crewList.Producer %}
                                                                <a href="#">
                                                                    <span itemtype="http://schema.org/Person" itemscope="" itemprop="producer">
                                                                        <span itemprop="name">{{item.name}}</span>
                                                                    </span>
                                                                </a>
                                                            {% endfor %}
                                                        {% endif %}
                                                        {% if crewList.Story is defined %}
                                                            <dt>Writers:</dt>
                                                            {% for item in crewList.Story %}
                                                                <span itemtype="http://schema.org/Person" itemscope="" itemprop="author">
                                                                    <a itemprop="url" href="#"><span itemprop="name">{{item.name}}</span></a>

                                                                </span>
                                                            {% endfor %}
                                                        {% endif %}
                                                        {% if movie.productionCountries is defined %}
                                                            <dt>Country:</dt>
                                                            <dd>

                                                                {% for item in movie.productionCountries|slice(0, 1) %}

                                                                <dd> {{ item.name }}</dd>
                                                            {% endfor %}
                                                            </dd>
                                                        {% endif %}
                                                    </dl> 
                                                    <dl class="meta col-sm-12"> 
                                                        <dt>Rating:</dt>

                                                        <dd itemtype="http://schema.org/AggregateRating" itemprop="aggregateRating" itemscope="" class="rating"> 
                                                            <span itemprop="ratingValue">{{movie.voteAverage}}</span> / <span itemprop="ratingCount">{{movie.voteCount}}</span> times 
                                                            <meta content="10" itemprop="bestRating">
                                                            <meta content="1" itemprop="worstRating"> 
                                                        </dd>

                                                        <dt>Quality:</dt> 
                                                        <dd><span class="quality">HD 720p</span></dd>
                                                        <dt>Popularity:</dt> <dd>{{movie.popularity}}</dd>
                                                    </dl>

                                                </div> 
                                            </div>
                                        </div> 
                                    </div> 
                                </div>

                                <div id="info" class="mt">
                                    <div class="col-left col-md-24 col-xs-24">
                                        <ul class="media_items">
                                            {% for item in listSeasons %}
                                                <li class="w92">
                                                    <a href="{{ path('viewseasonshow', {'slug': movie.name|GenerateSlug, 'id': movie.id,'idseason': item.seasonNumber, '_format': 'html'}) }}"><img width="65"  src="https://image.tmdb.org/t/p/w75/{{ item.posterPath }}" title="{{movie.name}} - Saison {{item.seasonNumber}}" alt="{{movie.name}} - Saison {{item.seasonNumber}}" class="shadow"></a>
                                                    <a href="{{ path('viewseasonshow', {'slug': movie.name|GenerateSlug, 'id': movie.id,'idseason': item.seasonNumber, '_format': 'html'}) }}" class="title">{{movie.name}} - Saison {{item.seasonNumber}} </a>
                                                </li>
                                            {% endfor %}
                                            <div style="clear: both;"></div>
                                        </ul> 
                                    </div>
                                </div>

                                <div id="tags"> 
                                    <label>Keywords:</label> <a rel="tag" href="http://fmovies.to/tag/marvel">marvel</a>
                                    <a rel="tag" href="http://fmovies.to/tag/x-men">x men</a> 
                                    <a rel="tag" href="http://fmovies.to/tag/xmen">xmen</a>
                                    <a rel="tag" href="http://fmovies.to/tag/apocalypse">apocalypse</a> 
                                </div>

                            </div>
                            <div class="col-left col-md-10 col-xs-14">
                                <ul class="media_items">
                                    {% for item in castList|slice(0, 10) %}
                                        <li class="w92">
                                            <a href="{{ path('viewpeople', {'slug': item.name|GenerateSlug, 'id': item.id, '_format': 'html'}) }}"><img width="65"  src="https://image.tmdb.org/t/p/w75/{{ item.profilePath }}" title="Le Trône de fer" alt="Le Trône de fer" class="shadow"></a>
                                            <a href="{{ path('viewpeople', {'slug': item.name|GenerateSlug, 'id': item.id, '_format': 'html'}) }}" class="title">{{ item.name }}  as {{ item.character }}</a>
                                        </li>
                                    {% endfor %}
                                    <div style="clear: both;"></div>
                                </ul>
                            </div>
                        </div> 


                        <div class="mt row">
                            <div class="col-left col-md-24 col-xs-24">
                                <ul class="media_items">
                                    {% for item in listMovies %}

                                        <li class="w92">
                                            <a href="{{ path('viewtvshow', {'slug': item.name|GenerateSlug, 'id': item.id, '_format': 'html'}) }}"><img width="65"  src="https://image.tmdb.org/t/p/w75/{{ item.posterPath }}" title="{{ item.name }}" alt="{{ item.name }}" class="shadow"></a>
                                            <a href="{{ path('viewtvshow', {'slug': item.name|GenerateSlug, 'id': item.id, '_format': 'html'}) }}" class="title">{{ item.name }} </a>
                                        </li>
                                    {% endfor %}
                                    <div style="clear: both;"></div>
                                </ul> 
                            </div>
                        </div>

                    </div>
                </div> 

            </div>
        </div>
    </div>
{% endblock %}
